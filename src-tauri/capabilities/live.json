{
	"$schema": "../gen/schemas/desktop-schema.json",
	"identifier": "live",
	"description": "Capability for live window",
	"windows": ["live"],
	"permissions": [
		"core:default",
		"core:window:allow-unminimize",
		"core:window:allow-show",
		"core:window:allow-set-focus",
		"core:window:allow-hide",
		"core:window:allow-start-dragging",
		"core:window:allow-set-ignore-cursor-events",
		"global-shortcut:allow-register",
		"global-shortcut:allow-unregister",
		"global-shortcut:allow-unregister-all",
		"os:default",
		"autostart:allow-enable",
		"autostart:allow-disable",
		{
			"identifier": "opener:allow-open-path",
			"allow": [
				{
					"path": "$APPLOG"
				}
			]
		},
		{
			"identifier": "opener:allow-open-url",
			"allow": [
				{
					"url": "https://discord.gg/3UTC4pfCyC"
				},
				{
					"url": "https://bptimer.com/modules-optimizer*"
				}
			]
		},
		{
			"identifier": "opener:allow-reveal-item-in-dir",
			"allow": [
				{
					"path": "$APPDATA\\tauri-plugin-svelte\\general.json"
				},
				{
					"path": "$APPDATA\\.window-state.json"
				},
				{
					"path": "$RESOURCE\\bpsr-logs.exe"
				}
			]
		},
		"clipboard-manager:allow-write-text",
		"clipboard-manager:allow-write-image"
	]
}
